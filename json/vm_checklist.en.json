        },
        {
            "category": "Single Region Resiliency",
            "subcategory": "VM Storage Resiliency",
            "text": "Ensure Managed Disks are used",
            "waf": "Reliability",
            "guid": "d6190f22-3a80-4e2e-b9b6-ecbd1ad1e63a",
